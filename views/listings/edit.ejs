<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit Listing</h3>

                <form action="/listings/<%= listing._id%>?_method=PUT" method="post" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3 mt-3">
                        <label class="form-label" for="title">Title</label>
                        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control"
                            required>
                        <div class="valid-feedback">Looks Good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <input type="text" name="listing[description]" value="<%= listing.description %>"
                            class="form-control" required>
                        <div class="invalid-feedback">Keep it short</div>
                    </div>
                    <div class="mv-3">
                        original Image <br>
                        <img src="<%= originalUrl %>" alt="image" style="height:200px">
                    </div>
                    <br>
                    <div class="mb-3">
                        <label class="form-label" for="image">Upload New Image</label>
                        <input type="file" name="listing[image]" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price"> Price</label>
                        <input type="text" name="listing[price]" value="<%= listing.price %>" class="form-control"
                            required>
                        <div class="invalid-feedback">Enter a valid Price</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label class="form-label" for="location">Location</label>
                            <input type="text" name="listing[location]" value="<%= listing.location %>"
                                class="form-control" required>
                            <div class="invalid-feedback">Enter Correct Location</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label class="form-label" for="country">Country</label>
                            <input type="text" name="listing[country]" value="<%= listing.country %>"
                                class="form-control" required>
                            <div class="invalid-feedback">Enter Correct Country</div>
                        </div>
                    </div>
                    <br>
                    <button class="btn btn-dark mt-1"
                        style="background-color: #fe424d; border:none !important;">Edited</button>
                    <br> <br>

            </div>
        </div>

        </form>

    </body>

    <script src="/js/script.js"></script>